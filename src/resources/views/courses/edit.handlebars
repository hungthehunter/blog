<div class='container'>
    <div class='create-page'>
        <div class='create-page-main'>
            <h2 class='mt-2 mb-4'>Cập nhật khóa học</h2>
            <form class='mt-4' method='POST' action='/courses/{{course._id}}?_method=PUT' style='width: 380px'>
                <div class='form-group'>
                    <label for='name'>Tên</label>
                    <input class='form-control input-custom' value="{{course.name}}" name='name' />
                </div>
                <div class='form-group'>
                    <label for='description'>Mô tả</label>
                    <input
                        class='form-control input-custom'
                        name='description'
                        value="{{course.description}}"
                    />
                </div>
                <div class='form-group'>
                    <label for='image'>Đường dẫn hình ảnh</label>
                    <input class='form-control input-custom' value="{{course.image}}" name='image' />
                </div>
                <div class='form-group'>
                    <label for='videoId'>Video ID</label>
                    <input class='form-control input-custom' value="{{course.videoId}}" name='videoId' />
                </div>
                <button
                    type='submit'
                    class='btn btn-primary create-course-btn'
                >TẠO</button>
            </form>
        </div>
    </div>
</div>

<script type='text/javascript'>
    document.title = "F8 Education | Tạo khóa học";
</script>